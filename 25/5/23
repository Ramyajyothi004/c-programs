#include <stdio.h>
#include <string.h>
int main()
{
char str[100];
int i=0;
int lower=0,special=0;
printf("Please enter the string \n");
scanf("%s",str);
while(str[i]!='\0') {
if(str[i]>=97 && str[i]<=122) {
lower++;
}
else {
special++;
}
i++;
}
printf("\nLower case letters: %d",lower);
printf("\nSpecial characters: %d",special);
return 0;
}
